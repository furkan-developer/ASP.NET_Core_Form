@model ICollection<Person>

@if (Model.Count > 0)
{
    if(TempData["ApplyStatus"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["ApplyStatus"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h6 class="display-6">
        Applications(@Model.Count())
    </h6>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Person candidate in Model)
            {
                <tr>
                    <td>@candidate.FirstName</td>
                    <td>@candidate.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        There is no application. Please click here to
        <a class="alert-link" asp-action="Apply"> apply. </a>
    </div>
}