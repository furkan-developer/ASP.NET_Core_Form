@model Person

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="display-6">
    Apply
</div>

<form method="post" asp-action="apply">
    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-check my-2">
        <input asp-for="HasProject" class="form-check-input">
        <label class="form-check-label" asp-for="HasProject">
            Does he/she have a project ?
        </label>
    </div>

    <div>
        <p>Expire time <span asp-validation-for="Expire" class="text-danger"></span></p>

        @foreach (var item in ViewBag.Expires as Dictionary<int, string>)
        {
            <div class="form-check my-2">
                <input class="form-check-input" type="radio" asp-for="Expire" value="@(item.Key)" id="@(item.Key)Expire">
                <label class="form-check-label" for="@(item.Key)Expire">
                    @item.Value
                </label>
            </div>
        }
    </div>

    <div class="form-floating my-2">
        <textarea class="form-control" placeholder="Leave a comment here" asp-for="Comment"></textarea>
        <label asp-for="Comment">Comments</label>
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>

    <div class="form-group my-2">
        <label asp-for="Birthday"></label>
        <input class="form-control" asp-for="Birthday"></textarea>
        <span class="text-danger" asp-validation-for="Birthday"></span>
    </div>

    @* select box (select list)*@

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" href="/">Home</a>
    </div>
</form>